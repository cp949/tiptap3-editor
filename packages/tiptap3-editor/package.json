{
  "name": "@cp949/tiptap3-editor",
  "version": "1.0.1",
  "description": "Tiptap 3.x based React Editor Library",
  "type": "module",
  "author": "cp949",
  "license": "ISC",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./style.css": "./dist/tiptap3-editor.css"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "node ../../scripts/sync-pkg-docs.js && tsc && vite build",
    "deploy": "pnpm build && pnpm publish --access public --no-git-checks",
    "preview": "vite preview",
    "lint": "biome lint .",
    "check-types": "tsc --noEmit"
  },
  "keywords": [
    "tiptap",
    "react",
    "editor",
    "wysiwyg"
  ],
  "peerDependencies": {
    "@tiptap/pm": "^3.0.0",
    "@tiptap/react": "^3.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/typography": "^0.5.19",
    "@tiptap/extension-bubble-menu": "^3.19.0",
    "@tiptap/extension-image": "^3.18.0",
    "@tiptap/extension-table": "^3.18.0",
    "@tiptap/extension-table-cell": "^3.18.0",
    "@tiptap/extension-table-header": "^3.18.0",
    "@tiptap/extension-table-row": "^3.18.0",
    "@tiptap/extension-underline": "^3.18.0",
    "@tiptap/pm": "^3.18.0",
    "@tiptap/react": "^3.18.0",
    "@tiptap/starter-kit": "^3.18.0",
    "@types/node": "^22.15.3",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "^5.1.3",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^3.4.19",
    "typescript": "5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@tiptap/extension-color": "^3.19.0",
    "@tiptap/extension-highlight": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-text-align": "^3.18.0",
    "@tiptap/extension-text-style": "^3.19.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "tailwind-merge": "^3.4.0"
  }
}

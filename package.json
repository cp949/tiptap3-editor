{
  "name": "tiptap3-editor",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "release": "pnpm --filter @cp949/tiptap3-editor run release",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --write --unsafe",
    "format": "biome format --write .",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "turbo": "^2.8.3",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=18"
  }
}
